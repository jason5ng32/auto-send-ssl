# Resend API 配置
RESEND_API_KEY=your_resend_api_key_here

# 证书域名配置
CERT_DOMAIN=example.com

# 证书路径 (生产环境使用 /etc/letsencrypt/live/{domain})
CERT_PATH=/etc/letsencrypt/live/example.com

# 测试模式下使用本地 tmp 目录
# CERT_PATH=./tmp/live/example.com

# 邮件配置
FROM_EMAIL=ssl@example.com
TO_EMAIL=admin@example.com  # 支持多个邮箱，用逗号分隔，如: admin@a.com,backup@b.com
SENDER_NAME=SSL Certificate System

# 证书有效期阈值（天数）
CERT_AGE_THRESHOLD=30

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Zip文件临时目录（可选，不设置则输出到当前目录）
TMP_PATH=./tmp

# 测试模式（设置为 true 时不实际发送邮件，只打印日志）
TEST_MODE=false

# 守护模式（设置为 true 时程序将作为守护进程运行）
DAEMON_MODE=false

# 调度间隔（守护模式下的执行频率）
# 支持单位：d(天), h(小时), s(秒), m(分钟)
# 示例：1d, 12h, 3600s, 30m
# 不指定单位默认为天
SCHEDULE_INTERVAL=1d

# 清理zip文件（可选）
CLEANUP_ZIP=false